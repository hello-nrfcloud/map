{
  "name": "@hello.nrfcloud.com/map",
  "version": "0.0.0-development",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hello-nrfcloud/map.git"
  },
  "bugs": {
    "url": "https://github.com/hello-nrfcloud/map/issues"
  },
  "homepage": "https://hello.nrfcloud.com/map",
  "keywords": [
    "nordicsemiconductor",
    "cellular-iot",
    "hello-nrfcloud"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "description": "Show public devices on a map",
  "scripts": {
    "start": "vite",
    "build": "node --max_old_space_size=8192 ./node_modules/vite/bin/vite.js build --emptyOutDir",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nordicsemiconductor/from-env": "3.0.0",
    "@types/node": "20.11.5",
    "husky": "8.0.3",
    "the-new-css-reset": "1.11.2",
    "tsx": "4.7.0",
    "vite": "5.0.12",
    "vite-plugin-solid": "2.8.2"
  },
  "dependencies": {
    "@hello.nrfcloud.com/proto": "6.4.6",
    "date-fns": "3.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts,.jsx,.tsx"
    ],
    "*.{md,json,yaml,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  }
}
