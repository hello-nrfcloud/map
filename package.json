{
  "name": "@hello.nrfcloud.com/map",
  "version": "0.0.0-development",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hello-nrfcloud/map.git"
  },
  "bugs": {
    "url": "https://github.com/hello-nrfcloud/map/issues"
  },
  "homepage": "https://hello.nrfcloud.com/map",
  "keywords": [
    "nordicsemiconductor",
    "cellular-iot",
    "hello-nrfcloud"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "description": "Show public devices on a map",
  "scripts": {
    "start": "vite",
    "build": "node --max_old_space_size=8192 ./node_modules/vite/bin/vite.js build --emptyOutDir",
    "prepare": "husky"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.515.0",
    "@aws-sdk/client-cloudfront": "3.515.0",
    "@bifravst/prettier-config": "1.0.0",
    "@commitlint/config-conventional": "18.6.2",
    "@nordicsemiconductor/cloudformation-helpers": "9.0.3",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "17.0.0",
    "@nordicsemiconductor/from-env": "3.0.1",
    "@types/node": "20.11.19",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unicorn": "51.0.1",
    "glob": "10.3.10",
    "husky": "9.0.11",
    "prettier": "3.2.5",
    "the-new-css-reset": "1.11.2",
    "tsx": "4.7.1",
    "vite": "5.1.3",
    "vite-plugin-solid": "2.10.1"
  },
  "dependencies": {
    "@hello.nrfcloud.com/proto": "6.4.13",
    "date-fns": "3.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts,.jsx,.tsx"
    ],
    "*.{md,json,yaml,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": "@bifravst/prettier-config",
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  }
}
